extends layout

block content
  #banner.page-header
    .row
      .col-md-6.col-sm-12
        h1= title

  .row
    .col-md-6.col-sm-12
      form(action="/submit_review", method="POST")
        .form-group
          label(for="name") Name: 
          input.form-control(type="text", id="name", name="name", required)
        br
        .form-group
          label(for="email") Email: 
          input.form-control(type="email", id="email", name="email", required)
        br
        .form-group
          label(for="rating") Rating (1-5): 
          input.form-control(type="number", id="rating", name="rating", min=1, max=5, required)
        br
        .form-group
          label(for="review") Review: 
          textarea.form-control(id="review", name="review", rows=5, cols=30, required)
        br
        input.btn.btn-primary(type="submit", value="Submit")
